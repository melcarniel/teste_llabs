<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Dt Cadastro</th>
      <th scope="col">Cargo</th>
      <th scope="col">cpf</th>
      <th scope="col">Nome</th>
      <th scope="col">UF</th>
      <th scope="col">Salário</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
{{#each funcionarios}}
  <tbody>
    <tr>
      <th scope="row">{{DataCad}}</th>
      <td>{{Cargo}}</td>
      <td>{{cpf}}</td>
      <td>{{Nome}}</td>
      <td>{{UfNasc}}</td>
      <td>{{Salario}}</td>
      <td>{{Status}}</td>
      <td><a class="btn btn-primary" href="/funcionarios/atualizar/{{id}}">Atualizar</a></td>
      <td>
          <form action="/funcionarios/todos/{{id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" class="btn btn-danger" value="Excluir">
          </form>
      </td>
    </tr>
    {{else}}
    <p>Sem funcionários cadastrados</p>
{{/each}}
    </tbody>
</table>

