<div class="card card-body">
    <h3>Cadastrar Funcionário</h3>
    <form action="/funcionarios/principal" method="POST">
    <div class="form-group">
        <label for="Cargo">Cargo</label>
        <select class="form-control" name="Cargo" required>
            <option>Analista Jr</option>
            <option>Analista Pl</option>
            <option>Analista Sr</option>
            <option>PO Jr</option>
            <option>PO Pl</option>
            <option>PO Sr</option>
            <option>AC Jr</option>
            <option>AC Pl</option>
            <option>AC Sr</option>
            <option>Dev Jr</option>
            <option>Dev Pl</option>
            <option>Dev Sr</option>
        </select>
    </div>
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" class="form-control" name="cpf" required>
    </div>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" name="Nome" required>
    </div>
    <div class="form-group">
        <label for="Salario">Salário</label>
        <input type="text" class="form-control" name="Salario" required>
    </div>
    <div class="form-group">
        <label for="UfNasc">UF Nascimento</label>
        <select class="form-control" name="UfNasc" required>
            <option>AC</option>
            <option>AL</option>
            <option>AM</option>
            <option>AP</option>
            <option>BA</option>
            <option>CE</option>
            <option>DF</option>
            <option>ES</option>
            <option>GO</option>
            <option>MA</option>
            <option>MT</option>
            <option>MS</option>
            <option>MG</option>
            <option>PA</option>
            <option>PB</option>
            <option>PR</option>
            <option>PE</option>
            <option>PI</option>
            <option>RJ</option>
            <option>RN</option>
            <option>RS</option>
            <option>RO</option>
            <option>RR</option>
            <option>SC</option>
            <option>SP</option>
            <option>SE</option>
            <option>TO</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" name="Status" required>
        <option>ATIVO</option>
        <option>BLOQUEADO</option>
        <option>INATIVO</option>
        </select>
     </div>
     <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>